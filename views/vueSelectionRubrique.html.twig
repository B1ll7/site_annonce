{% extends "base.html.twig" %}
{% block content %}
{% include "navbar.html.twig" %}
    <div class='header'></div>
    <h3>Choisissez votre rubrique </h2>
    <div class='contenerRubs'>
        {% if name == null %}
            {% for rub in rubs %}
                <div class='selectionRubrique'>
                    <a href='{{url}}?action=afficherAnnonces&idRub={{rub.ID}}'>
                        {{rub.LIBELLE}}
                    </a>
                </div>
            {% endfor %}
        {% endif %}
        {% if name != null and droits != 'admin' %}
            {% for rub in rubs %}
                <div class='selectionRubrique'>
                    <a href='{{url}}?action=afficherAnnonces&idRub={{rub.ID}}'>
                        {{rub.LIBELLE}}
                    </a>
                </div>
            {% endfor %}
        {% endif %}
        {% if name != null and droits == 'admin' %}
            {% for rub in rubs %}
                <div class='selectionRubrique'>
                    <a href='{{url}}?action=afficherAnnonces&idRub={{rub.ID}}'>
                        {{rub.LIBELLE}}
                    </a>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}